{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue-hoki">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-globe"></i>Registro de tarjetas existentes
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="reload">
                            </a>
                            <a href="javascript:;" class="remove">
                            </a>
                        </div>
                        <div class="actions">
                            <a href="{{ path('credit_card_new') }}" class="btn btn-sm btn-success">Crear tarjeta</a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover" id="sample_2">
                            <thead>
                            <tr>

                                <th>
                                     Numero
                                </th>
                                <th>
                                     Tipo
                                </th>
                                <th>
                                    Acciones
                                </th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for credito in credit_cards %}
                                <tr>
                                    <td>
                                        {{ credito.number }}
                                    </td>
                                    <td>
                                        {{ credito.type }}
                                    </td>
                                    <td>
                                        <a href="{{ path('credit_card_show', {'id': credito.id}) }}" class="btn btn-sm btn-primary">Mostrar</a>
                                        <a href="{{ path('credit_card_edit', {'id': credito.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

