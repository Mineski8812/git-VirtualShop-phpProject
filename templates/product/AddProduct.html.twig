{% block body %}

    <div class="row">
        <div class="col-md-6">
            <div class="portlet box blue">
                <div class="popover-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i> INSERTAR PRODUCTO
                    </div>

                    <div class="tools">
                        <a href="" class="collapse">
                        </a>
                        <a href="#portlet-config" data-toggle="modal" class="config">
                        </a>
                        <a href="" class="reload">
