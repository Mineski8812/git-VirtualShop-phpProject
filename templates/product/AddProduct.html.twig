                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <br>
                        <button class="btn btn-sm blue-hoki">{{ button_label|default('Enviar') }}</button>
                        <a class="btn btn-sm btn-danger" href="{{ path('tienda.index') }}">Cancelar</a>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>



